#!/usr/bin/env bash
# server setup

file_path="/etc/nginx/sites-available/default"

apt-get -y update
apt-get -y install nginx
ufw allow 'Nginx HTTP'
echo "Holberton School" > /var/www/html/index.html
site_redirect="https://www.youtube.com/watch?v=QH2-TGUlwu4"
string_add="rewrite ^/redirect_me $site_redirect permanent;"
sed -i "/listen \[::\]:80 default_server/a $string_add" $file_path
error_add="error_page 404 /404.html"
echo "Ceci n'est pas une page" > /var/www/html/404.html
sed -i "/listen \[::\]:80 default_server/a $error_add" $file_path

header_string="add_header X-Served-By $(hostname);"
sudo sed -i "/listen \[::\]:80 default_server/a $append_string" $file_path

service nginx restart